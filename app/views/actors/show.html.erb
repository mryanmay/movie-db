<div class="main">
  <div class="container">
    <div class="actor">
      <div class="info">
        <h2 class="actor-name"><%= @actor.name %></h2>
      </div>
    </div>

    <h2>Movies</h2>
    <% @movies.each do |movie| %>
      <div class="movie">
        <h3 class="movie-title"><%= link_to movie.title, movie_path(movie) %></h3>
      </div>
    <% end %>
  </div>
</div>
