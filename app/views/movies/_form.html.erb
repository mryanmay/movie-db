<%= form_for(@movie) do |f| %>
  <%= render 'shared/errors', object: @movie %>
  <fieldset>
    <ol>
      <li>
        <%= f.label :title %>
        <%= f.text_field :title, autofocus: true %>
      </li>
      <li>
        <%= f.label :actors %>
        <%= f.collection_select :actor_ids, Actor.all, :id, :name, {}, multiple: true %>
      </li>
      <li>
        <%= f.label :genre %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name %>
      </li>
    </ol>
    <p>
      <%= f.submit %> |
      <%= link_to("Cancel", movies_path, class: "button") %>
    </p>
  </fieldset>
<% end %>
