<% if object.errors.any? %>
  <section id="errors">
    <header>
      <h2>
        The <%= object.class.name %> couldn't be saved.
      </h2>
      <h3>
        Please check following <%= pluralize(object.errors.count, 'error') %>:
      </h3>
    </header>
    <ul>
      <% object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </section>
<% end %>
